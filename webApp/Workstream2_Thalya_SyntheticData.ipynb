import random
import pandas as pd

intents = {
    "payment_request": [
        "I want to pay my balance today.",
        "How can I make a payment?",
        "I'd like to clear my account now.",
        "Can I pay my debt online?",
        "I’m ready to pay what I owe."
    ],

    "payment_scheduling": [
        "Can I set up a payment plan?",
        "I want to pay in installments.",
        "Is it possible to split my payments?",
        "Can we arrange a monthly payment?",
        "I need a structured payment option."
    ],

    "extension_request": [
        "I need more time to pay.",
        "Can I get an extension?",
        "I won’t be able to pay by the due date.",
        "Is it possible to delay my payment?",
        "Can you give me extra time?"
    ],

    "speak_to_agent": [
        "I want to speak to a representative.",
        "Can I talk to a live agent?",
        "I need to speak with someone directly.",
        "Transfer me to an agent.",
        "This is too complicated, I need a person."
    ],

    "dispute_debt": [
        "This debt is not mine.",
        "I don’t recognize this account.",
        "There must be a mistake.",
        "I want to dispute this charge.",
        "This balance is incorrect."
    ],

    "financial_hardship": [
        "I lost my job and can’t pay.",
        "I’m experiencing financial difficulties.",
        "I’m struggling to make ends meet.",
        "My income was reduced recently.",
        "I’m facing hardship right now."
    ],

    "general_inquiry": [
        "What is my current balance?",
        "When is my due date?",
        "Can you explain this charge?",
        "How much do I owe?",
        "Can you provide more details?"
    ]
}
tones = [
    "in a calm tone",
    "in an urgent tone",
    "in a frustrated tone",
    "in a polite tone",
    "in a confused tone"
]

generated_data = []

for intent, examples in intents.items():
    for _ in range(32):  # 32 per intent ≈ 224 total
        base_text = random.choice(examples)
        tone = random.choice(tones)

        text = f"{base_text} ({tone})"

        generated_data.append({
            "text": text,
            "intent": intent
        })

df = pd.DataFrame(generated_data)

df.head()
df.to_csv("Thalya_generatedconv.csv", index=False)
